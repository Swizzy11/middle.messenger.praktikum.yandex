 <div class="block_edit_profile">
            <div class="edit_profile_header">
                <button class="btn btn_close"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                  </svg>
                </button>
                <h1 style="margin: 0;">Профиль</h1>
            </div>
            <hr style="width: 90%;margin: auto ; opacity: 0.5; margin-bottom: 5%;">
            <div class="edit_profile_body">
                <div class="form">
                    <h3 class="name_features">Аватар:</h3>
                    <form action="" method="post" target="_blank" >
                        <div class="user_photo" style="margin-left: 4vw;"></div>
                    </form>
                </div>
                <div class="form_block">
                    <h3 class="name_features">Имя:</h3>
                    <form action="" method="post" target="_blank" >
                        {{{userName}}}
                    </form>
                </div>    
                <div class="form_block">
                    <h3 class="name_features">Фамилия:</h3>
                    <form action="" method="post" target="_blank" >
                        {{{userSurname}}}
                    </form>
                </div>
                <div class="form_block">
                    <h3 class="name_features">Почта:</h3>
                    <form action="" method="post" target="_blank" >
                        {{{email}}}
                    </form>
                </div>
                <div class="form_block">
                    <h3 class="name_features">Пароль:</h3>
                    <form action="" method="post" target="_blank" >
                        {{{password}}}
                    </form>
                </div>
                <div class="form_block">
                    <h3 class="name_features">Номер телефона:</h3>
                    <form action="" method="post" target="_blank" >  
                        {{{phone}}}
                    </form>
                </div>
            </div>
            <div class="edit_profile_footer">
                <button class="btn btn_save">Сохранить</button>
            </div>
        </div>